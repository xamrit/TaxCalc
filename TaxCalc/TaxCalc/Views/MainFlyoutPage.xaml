<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxCalc.Views.MainFlyoutPage"
             xmlns:pages="clr-namespace:TaxCalc.Views"
            IsGestureEnabled="True"
            FlyoutLayoutBehavior="Popover">
  <FlyoutPage.Flyout>
    <pages:SlideoutPage 
        x:Name="SlideoutPage" />
  </FlyoutPage.Flyout>
  <FlyoutPage.Detail>
    <pages:BaseNavigationPage>
      <x:Arguments>
        <pages:TaxRatePage />
      </x:Arguments>
    </pages:BaseNavigationPage>
  </FlyoutPage.Detail>
</FlyoutPage>